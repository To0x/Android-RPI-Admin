<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="onButtonClick"
        android:text="@string/btnSpeed" />

    <Button
        android:id="@+id/btnBreak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onButtonClick"
        android:text="@string/btnBreak" />

    <SeekBar
        android:id="@+id/seekBarGravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnSpeed"
        android:layout_toLeftOf="@+id/btnBreak"
        android:layout_toRightOf="@+id/btnSpeed"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:progress="50" />

    <Switch
        android:id="@+id/switchGear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textOff="D"
        android:textOn="R" />

</RelativeLayout>
